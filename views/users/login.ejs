<!-- @format -->

<% layout('/layouts/boilerplate') %>
<body style="background-color: rgb(235, 235, 235)">
	<div class="row mt-4">
		<h1
			style="text-align: center; font-weight: 700; font-size: 2rem !important">
			Login to Airbnb
		</h1>
		<div
			class="col-md-6 col-sm-9 col-11"
			style="margin: 0px auto; margin-top: 20px;">
			<form
				novalidate
				style="
					border: 1px solid rgb(199, 199, 199);
					padding: 20px;
					background-color: white;
					border-radius: 10px;
				"
				class="needs-validation"
				action="/login"
				method="post">

				<div style="margin-top: 10px; margin-left: 1.2rem; margin-right: 1.2rem">
					<label
						style="margin-left: 3px; font-weight: 700"
						for="username"
						class="form-label"
						>Enter Name:
					</label>
					<input
						class="form-control"
						type="text"
						required
						name="username"
						id="username"
						placeholder="Enter your username.." />
					<div class="valid-feedback">Username Looks good!</div>
					<div class="invalid-feedback">Please Enter Username!</div>
				</div>

				<div style="margin-top: 10px; margin-left: 1.2rem; margin-right: 1.2rem">
					<label
						style="margin-left: 3px; font-weight: 700"
						for="password"
						class="form-label"
						>Enter Password:
					</label>
					<input
						class="form-control"
						type="password"
						required
						name="password"
						id="password"
						placeholder="Enter your password.." />
					<div class="valid-feedback">Password Looks good!</div>
					<div class="invalid-feedback">Please Enter Password!</div>
				</div>

				<button
					class="btn btn-primary"
					style="
						padding: 6px 12px;
						font-weight: 600;
						margin-top: 1.5rem;
						margin-left: 1.6rem;
					">
					Login
				</button>
			</form>
		</div>
	</div>
</body>
